mixin page-title(u)
    if u.inverted
        header(class=`page-title pt-8 pb-6 relative ${u.classes}`)
            .container
                div(class=`tag-client inline-block font-proxima-bold px-2 py-0.5 ${u.tagClasses}`)= u.tagClient
                h1(class=`mt-4 font-proxima-bold leading-none text-white ${u.h1Classes}`) !{u.h1}
                if u.subtitle
                    p(class=`page-subtitle mt-3 leading-tight text-white ${u.subtitleClasses}`) !{u.subtitle}
                if u.audio
                    a(class=`btn-audio w-auto relative font-proxima-bold no-underline px-4 h-9 rounded-[4px] items-center inline-flex mt-6 border border-current fill-current text-white hover:text-white/80 transition-colors text-white` href=`${u.audio} `)
                        svg.inline-block.relative.z-20.w-20.h-16.mr-4
                            +iconMono({
                                icon: 'audio-wave'
                            })
                        span.text-base Listen
                        div(class="h-[50px] bg-transparent w-3 absolute left-11 z-10 " style="backdrop-filter: blur(10px)")


    else
        header(class=`page-title pt-8 pb-6 ${u.classes}`)
            .container
                div(class=`tag-client inline-block font-proxima-bold px-2 py-0.5 bg-blue-light text-white ${u.tagClasses}`)= u.tagClient
                h1(class=`mt-4 font-proxima-bold leading-none text-blue-dark ${u.h1Classes}`) !{u.h1}
                if u.subtitle
                    p(class=`page-subtitle mt-3 leading-tight text-blue-dark ${u.subtitleClasses}`) !{u.subtitle}
                if u.audio
                    a(class=`btn-audio w-auto relative font-proxima-bold no-underline px-4 h-9 rounded-[4px] items-center inline-flex mt-6 border border-current text-blue-dark hover:text-blue transition-colors ${u.audioClasses}` href=`${u.audio}`)
                        svg.inline-block.relative.z-20.w-20.h-16.mr-4
                            +iconMulti({
                                icon: 'audio-wave'
                            })
                        span.text-base Listen
                        div(class="h-[50px] bg-white w-3 absolute left-11 z-10 " )


mixin lead-in(u)
    div(class=`lead-in font-proxima-bold text-lg lg:text-xl ${u.classes}`)
        .container.
            !{u.content}


mixin team-member(x)
    span(class="mr-auto text-sm md:text-base")
        i #{x.role}:
        b.font-proxima-bold  #{x.name}
    .team-contacts.flex.items-center
        - let social = Object(x.contacts)
        each val, key in social
            a(href=`${val}` class="text-gray-light hover:text-blue-light mx-1" target="_blank")
                svg.svg.w-6.h-6.fill-current
                    +iconMono({
                        icon: key
                    })


mixin team(team)
    .max-w-lg.mx-auto
        each teamMember, index in team
            div(data-aos="fade-in" data-aos-delay=`${100*(index+1)}` class="border-b py-2 last:border-0 will-change-opacity")
                .flex.items-center.justify-between
                    +team-member(teamMember)
                if teamMember.comment
                    .clients-comment.text-xs.text-gray-400.mt-2 !{teamMember.comment}


//- svg icons
mixin iconMono(x)
    if x.style
        svg(class=`svg ${x.classes}` style=`${x.style}`)
            use(xlink:href=`img/icons/icons-sprite-mono.svg#${x.icon}`)
    else
        svg(class=`svg ${x.classes}`)
            use(xlink:href=`img/icons/icons-sprite-mono.svg#${x.icon}`)

mixin iconMulti(x)
    if x.style
        svg(class=`svg ${x.classes}` style=`${x.style}`)
            use(xlink:href=`img/icons/icons-sprite-multi.svg#${x.icon}`)
    else
        svg(class=`svg ${x.classes}`)
            use(xlink:href=`img/icons/icons-sprite-multi.svg#${x.icon}`)

