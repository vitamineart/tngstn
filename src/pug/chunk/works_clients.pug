    .container
        header.text-blue.font-proxima-bold.text-3xl.text-center Our Work and Clients
        div(class="works-grid grid gap-2 md:gap-4 mt-6 md:mt-10")
            each project in filteredProjects
                a.item(
                    href=project.url
                    class="m-auto max-w-sm sm:max-w-none relative block shadow-cardshadow overflow-hidden group will-change-transform-opacity min-w-fit"
                )
                    .overlay(class="absolute inset-0 grid place-items-center opacity-0 z-50 bg-blue-dark/80 duration-500 transition-opacity pointer-events-none group-hover:opacity-100" style="will-change: opacity")
                        .text(class="text-center text-white tracking-wide" style="text-shadow: 0 1px 5px var(--c-blue-dark);")
