                            div(class="project-type translate-x-3 opacity-0 duration-500 transition-transform-opacity will-change-transform-opacity group-hover:transform-none group-hover:opacity-100")= project.type
                    img(loading="lazy" width="470" height="262" src=`${project.image}` alt=`${project.name} Image` class="relative w-full h-full z-0 duration-1000  will-change-transform border-3 border-current text-white hover:text-blue group-hover:scale-110 group-hover:rotate-1" style="transition-property: color, transform")



